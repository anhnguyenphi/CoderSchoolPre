<% content_for :content do %>
	<div class="col-sm-6 col-md-8 col-md-offset-2">
		<h3><%= @article.title %></h3>
		<%= link_to 'Edit', edit_article_path(@article), class: "btn btn-primary-outline" %>
		<button type="button" class="btn btn-danger-outline" data-toggle="modal" data-target=".Delete">Delete</button>

        <div class="modal fade Delete" tabindex="-1" role="dialog" aria-labelledby="mySmallModalLabel">
          <div class="modal-dialog modal-sm">
            <div class="modal-content">
              
            <div class="modal-header Model">
              Delete article
            </div>

            <div class="modal-body Model">
              <p>Do you want delete this article</p>
            </div>

              <div class="modal-footer">
                  <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                  <%= link_to 'Destroy', article_path(@article),
                                method: :delete,
                                class: "btn btn-danger",
                                style: "color:white"
                  %>
              </div>

            </div>
          </div>
        </div>
		<hr>
		<%= @markdown.render(@article.body).html_safe %>
	</div>
<% end %>

<%= render template: "/articles/layout" %>
