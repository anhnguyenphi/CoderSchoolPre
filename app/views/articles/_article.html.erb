<div class="col-sm-6 col-md-9 col-md-offset-1">
  <% @articles.each do |article| %>
    <div class="card">
      <div class="card-block">
        <h4 class="card-title"><a href="<%= article_path(article) %>"><%= article.title %></a></h4>
        <p class="card-text"><%= @markdown.render(article.body).html_safe %></p>
      </div>
      <div class="card-footer">
        <%= link_to 'Edit', edit_article_path(article), class: "btn btn-primary-outline" %>

        <button type="button" class="btn btn-danger-outline" data-toggle="modal" data-target=".Delete">Delete</button>

        <div class="modal fade Delete" tabindex="-1" role="dialog" aria-labelledby="mySmallModalLabel">
          <div class="modal-dialog modal-sm">
            <div class="modal-content">
              
            <div class="modal-header Model">
              Delete article
            </div>

            <div class="modal-body Model">
              <p>Do you want delete this article</p>
            </div>

              <div class="modal-footer" >
                  <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                  <%= link_to 'Destroy', article_path(article),
                        method: :delete,
                        class: "btn btn-warning",
                        style: "color:white"
                  %>
              </div>

            </div>
          </div>
        </div>


      </div>
    </div>
  <% end %>
</div>